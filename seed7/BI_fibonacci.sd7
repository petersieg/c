$ include "seed7_05.s7i";
  include "stdio.s7i";
  include "bigint.s7i";

const proc: main is func
  local
    var integer: n is 0; (* for loop var  *)
    var bigInteger: a is 0_; 
    var bigInteger: b is 1_;
    var bigInteger: r is 0_; (* result of a+b *)
    var integer: c is 0; (* count limit   *)
  begin
  
  write("Input count: ");
  readln(c);
  if (c < 10) then c := 10; 
  end if;
  
  for n range 1 to c do
    r := a + b;
    write  ("n=");
    write  (n);
    write  (" r=");
    writeln(r);
    a := b;
    b := r;
  end for;
end func;
